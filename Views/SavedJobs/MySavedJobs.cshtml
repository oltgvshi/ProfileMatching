@model IEnumerable<ProfileMatching.Models.SavedJob>

@{
    ViewData["Title"] = "MySavedJobs";

    Pager pager = new Pager();
    int pageNo = 0;

    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<div class="container">

<h1>Your saved jobs:</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobPost.JobPostName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobPost.JobPostBudget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobPost.JobLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobPost.JobPostDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobPost.JobApplicationDeadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobPost.Category)
            </th>
            <th>Client Name</th>
            <th>
                @Html.DisplayNameFor(model => model.JobPost.CompanyName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobPost.JobPostName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobPost.JobPostBudget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobPost.JobLength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobPost.JobPostDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobPost.JobApplicationDeadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobPost.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName)
                @Html.DisplayFor(modelItem => item.ApplicationUser.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobPost.CompanyName)
            </td>

                <td>
                    <form asp-controller="SavedJobs" asp-action="Unsave" method="post" asp-route-id="@item.JobPostId">
                        <button>Unsave Job</button>
                    </form>
                </td>

                  @if (((List<int?>)ViewBag.AppliedJobs).Contains(item.JobPostId)) {
                        <td>
                         <form asp-controller="ApplicantsPerJobs" asp-action="UnApply" method="post" asp-route-id="@item.JobPostId">
                             <button>UnApply</button>
                         </form>
                        </td>
                    }
                    else
                    {
                         <td>
                         <form asp-controller="ApplicantsPerJobs" asp-action="ApplyForJob" method="post" asp-route-id="@item.JobPostId">
                             <button>Apply</button>
                         </form>
                        </td>  
                    }
            </tr>
        }
    </tbody>
</table>

<div class="container">
    @if(pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if(pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="SavedJobs" asp-action="MySavedJobs" asp-route-pg="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="SavedJobs" asp-action="MySavedJobs" asp-route-pg="@(pager.CurrentPage-1)">Previous</a>
                </li>
            }

            @for(var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge==pager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="SavedJobs" asp-action="MySavedJobs" asp-route-pg="@pge"> @pge</a>
                </li>
            }

            @if(pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="SavedJobs" asp-action="MySavedJobs" asp-route-pg="@(pager.CurrentPage+1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="SavedJobs" asp-action="MySavedJobs" asp-route-pg="@(pager.TotalPages)">Last</a>
                </li>
        
            }

        </ul>
    }

</div>
</div>