@model ProfileMatching.Models.ClientDetail

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Model.Position
            </td>
            <td>
                @Model.CompanyName
            </td>
            <td>
                @Model.Description
            </td>
            <td>
                @Model.City.CityName
            </td>
        </tr>
    </tbody>
</table>


<table class="table">
    <thead>
        <tr>

            <th>
                <label>JobPostName</label>
                @ViewBag.JobPostName
            </th>
            <th>
                <label>Budget</label>
                @ViewBag.JobPostBudget
            </th>
            <th>
                <label>Length</label>
                @ViewBag.JobLength
            </th>
            <th>
                <label>JobPostDescription</label>
                @ViewBag.JobPostDescription
            </th>
            <th>
                <label>Deadline</label>
                @ViewBag.JobApplicationDeadline
            </th>
            <th>
                <label>Category</label>
                @ViewBag.Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in ViewBag.JobPosts) {
        <tr>
                <td>
                    @item.JobPostName
                </td>
                <td>
                    @item.JobPostBudget
                </td>
                <td>
                    @item.JobLength
                </td>
                <td>
                    @item.JobPostDescription
                </td>
                <td>
                    @item.JobApplicationDeadline
                </td>
                <td>
                    @item.Category.CategoryName
                </td>
            </tr>
          
            }
        </tbody>
    </table>