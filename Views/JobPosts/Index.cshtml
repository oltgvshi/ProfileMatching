@model IEnumerable<ProfileMatching.Models.JobPost>

@{
    ViewData["Title"] = "Index";

    Pager pager = new Pager();
    int pageNo = 0;

    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="container">

<h1>All Job Posts @ViewBag.Role</h1>

    @if (TempData["SuccessfulApplication"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("Application was successful!");
            };
        </script>
    }

    @if (TempData["SuccessfulSave"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("Job saved successfully!");
            };
        </script>
    }

<form asp-action="SearchJobPost" method="get">
    <p>Search: </p>
    <input type="text" name="teksti" value="" />
    <input type="submit" name="submit" value="Search" />
</form>


<form asp-action="FilterJobPost" method="get">
    <p>Select Category: </p>
    <select name="id">
        @foreach (var item in ViewBag.Categories)
        {
            <option value="@item.CategoryId">@item.CategoryName</option>
        }
    </select>
    <input type="submit" name="submit" value="Filter" />
</form>

@if(ViewBag.Role == "Client" || ViewBag.Role=="Admin")
{
    <p>
         <a asp-action="Create">Create New</a>
    </p>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobPostName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobPostBudget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobPostDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobApplicationDeadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>Client Name</th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobPostName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobPostBudget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobLength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobPostDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobApplicationDeadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName)
                @Html.DisplayFor(modelItem => item.ApplicationUser.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
        

                @if (ViewBag.Role == "Admin" )
                {
                    <td>
                <a asp-action="Edit" asp-route-id="@item.JobPostId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.JobPostId">Delete</a> |
                <a asp-controller="ApplicantsPerJobs" asp-action="ShowJobApplicants" asp-route-id="@item.JobPostId">Show Applicants</a>
                <a asp-controller="Freelancers" asp-action="Suggested" asp-route-id="@item.Category.CategoryId">Suggested Freelancers</a>
            </td>
            }

            @if(ViewBag.Role == "Freelancer"){
                    @if (((List<int?>)ViewBag.AppliedJobs).Contains(item.JobPostId)) {
                        <td>
                         <form asp-controller="ApplicantsPerJobs" asp-action="UnApply" method="post" asp-route-id="@item.JobPostId">
                             <button>UnApply</button>
                         </form>
                        </td>
                    }
                    else
                    {
                         <td>
                         <form asp-controller="ApplicantsPerJobs" asp-action="ApplyForJob" method="post" asp-route-id="@item.JobPostId">
                             <button>Apply</button>
                         </form>
                        </td>  
                    }


                    @if (((List<int?>)ViewBag.SavedJobs).Contains(item.JobPostId))
                    {
                         <td>
                        <form asp-controller="SavedJobs" asp-action="Unsave" method="post" asp-route-id="@item.JobPostId">
                            <button>Unsave</button>
                        </form>
                        </td>
                    }
                    else
                    {
                         <td>
                        <form asp-controller="SavedJobs" asp-action="SaveJob" method="post" asp-route-id="@item.JobPostId">
                        <button>Save</button>
                        </form>
                        </td>
                    }


            }

        </tr>
}
    </tbody>
</table>

<div class="container">
    @if(pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if(pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="JobPosts" asp-action="Index" asp-route-pg="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="JobPosts" asp-action="Index" asp-route-pg="@(pager.CurrentPage-1)">Previous</a>
                </li>
            }

            @for(var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge==pager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="JobPosts" asp-action="Index" asp-route-pg="@pge"> @pge</a>
                </li>
            }

            @if(pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="JobPosts" asp-action="Index" asp-route-pg="@(pager.CurrentPage+1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="JobPosts" asp-action="Index" asp-route-pg="@(pager.TotalPages)">Last</a>
                </li>
        
            }

        </ul>
    }

</div>
</div>