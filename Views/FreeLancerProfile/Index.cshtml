@model ProfileMatching.Models.FreelancerDetails

@{
    ViewData["Title"] = "Index";
}

<h1>FreelancersProfile</h1>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City.CityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HourlyRate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <td>
                @Model.ApplicationUser.Email
            </td>
            <td>
                @Model.ApplicationUser.FirstName
            </td>
            <td>
                @Model.ApplicationUser.LastName
            </td>
            <td>
                @Model.Category.CategoryName
            </td>
            <td>
                @Model.City.CityName)
            </td>
            <td>
                @Model.HourlyRate)
            </td>

        </tr>
</table>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor( ViewBag.Projects.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(ViewBag.Projects.FileName)
            </th>
            <th>
                @Html.DisplayNameFor(ViewBag.Projects.Description)
            </th>
            <th>
                @Html.DisplayNameFor(ViewBag.Projects.ProjectWebsite)
            </th>
            <th>
                @Html.DisplayNameFor(ViewBag.Projects.Category)
            </th>
            <th>
                @Html.DisplayNameFor(ViewBag.Projects.ApplicationUser)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in ViewBag.Projects)
        {
            <tr>
                <td>
                    @item.Projects.ProjectName
                </td>
                <td>
                    @item.Projects.FileName
                </td>
                <td>
                    @item.Projects.Description
                </td>
                <td>
                    @item.Projects.ProjectWebsite
                </td>
                <td>
                    @item.Projects.CategoryId
                </td>
                <td>
                    @item.Project.ApplicationUser.Id
                </td>

            </tr>
        }

    </tbody>
</table>  